---
import { SuperForm, type ContactFormFields } from "../components/SuperForm";
import Layout from "../layouts/Layout.astro";

export const prerender = true;

let formFields: ContactFormFields = {
    name: {
        tag: "INPUT",
        atts: { type: "text", required: true },
        errors: null,
        name: "name",
        value: "",
        valid: false,
    },
    email: {
        tag: "INPUT",
        atts: { type: "email", required: true },
        errors: null,
        name: "email",
        value: "",
        valid: false,
    },
    phone: {
        tag: "INPUT",
        atts: { type: "tel", required: true },
        errors: null,
        name: "phone",
        value: "",
        valid: false,
    },
    contact: {
        tag: "SELECT",
        atts: { type: "text", required: true },
        errors: null,
        name: "contact",
        value: "",
        options: [
            { option: "Whatsapp", value: "whatsapp" },
            { option: "Phone call", value: "phone_call" },
            { option: "Email", value: "email" },
        ],
        valid: false,
    },
    message: {
        tag: "TEXTAREA",
        atts: { required: true },
        errors: null,
        name: "message",
        value: "",
        valid: false,
    },
};

---

<Layout title="Contacto">
    <SuperForm client:visible fields={formFields} />
</Layout>

<style lang="scss"></style>
